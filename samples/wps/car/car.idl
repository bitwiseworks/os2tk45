   // METHOD: SetLowTone                                     ( ) PRIVATE
   //                                                        (X) PUBLIC
   // DESCRIPTION:
   //
   //   Set LowTone of horn

   ULONG QuerySpeed();
   // METHOD: QuerySpeed                                     ( ) PRIVATE
   //                                                        (X) PUBLIC
   // DESCRIPTION:
   //
   //   Query Speed of car
