   VOID SetSpeed(in ULONG ulSpeed);
   // METHOD: SetSpeed                                       ( ) PRIVATE
   //                                                        (X) PUBLIC
   // DESCRIPTION:
   //
   //   Set Speed of car

   BOOL BeepHorn();
   // METHOD: BeepHorn                                       ( ) PRIVATE
   //                                                        (X) PUBLIC
   // DESCRIPTION:
   //
   //   Beep the car's horn.
   //
   // RETURN:
