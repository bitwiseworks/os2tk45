      /*
       * Class Modifiers
       */
      externalstem   = car;
      externalprefix = car_;
      majorversion   = 1;
      minorversion   = 2;
      filestem       = car;
      metaclass      = M_Car;
      callstyle      = oidl;

/* som2 The continuation mark '\' must have a space before the " in the
   passthru section i.e., \" -> \ " */

    passthru C_ih =     ""
